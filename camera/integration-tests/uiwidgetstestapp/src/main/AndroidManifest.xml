<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androidx.camera.integration.uiwidgets">

    <application
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="androidx.camera.integration.uiwidgets.ViewPager2Activity"
            android:label="ViewPager2 CameraX Test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="androidx.camera.integration.uiwidgets.ViewPagerActivity"
            android:label="ViewPager CameraX Test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Rotations -->
        <activity android:name=".rotations.UnlockedOrientationActivity" />
        <activity
            android:name=".rotations.LockedOrientationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".rotations.OrientationConfigChangesOverriddenActivity"
            android:configChanges="orientation|screenSize" />
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>